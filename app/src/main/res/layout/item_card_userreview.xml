<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/item_card_UserReview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="16dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/UserReview_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="28dp"
                android:text="[4]"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintVertical_bias="0.63" />

            <ImageView
                android:id="@+id/UserReview_user_image"
                android:layout_width="71dp"
                android:layout_height="67dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@color/colorAccent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.088" />

            <TextView
                android:id="@+id/UserReview_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="[User Name]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/UserReview_user_image"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/UserReview_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="[Date]"
                android:textColor="@android:color/holo_blue_dark"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/UserReview_ratingstar_iv" />

            <TextView
                android:id="@+id/UserReview_header"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:text="[Review Header]"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/UserReview_user_image"
                card_view:layout_constraintTop_toTopOf="@+id/UserReview_user_name" />

            <TextView
                android:id="@+id/UserReview_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="[review body]"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                card_view:layout_constraintStart_toEndOf="@+id/UserReview_user_image"
                card_view:layout_constraintTop_toBottomOf="@+id/UserReview_header" />

            <ImageView
                android:id="@+id/UserReview_ratingstar_iv"
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/raitingstar"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/UserReview_user_image"
                card_view:layout_constraintVertical_bias="0.162" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>