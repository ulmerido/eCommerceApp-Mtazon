<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/filter_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/my_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.v7.widget.CardView
            android:id="@+id/filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_details_searchBook"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:hint="Audio Book Name"
                    android:inputType="text|textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/radioButtonByPrice"
                    app:layout_constraintEnd_toStartOf="@+id/button_search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/details_button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"

                    android:onClick="onSearchButtonClick"
                    android:text="Search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/et_searchBook"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/details_card_view_book"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="16dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/details_ReviewAvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="92dp"
                android:text="[4.4]"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="@+id/item_book_genre"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/details_book_image"
                card_view:layout_constraintTop_toBottomOf="@+id/details_genre"
                card_view:layout_constraintVertical_bias="0.109" />

            <ImageView
                android:id="@+id/details_book_image"
                android:layout_width="173dp"
                android:layout_height="156dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@color/colorAccent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.202" />

            <TextView
                android:id="@+id/details_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="[BOOK NAME]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@id/details_book_image"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/details_auther"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="8dp"
                android:text="[auther]"
                android:textColor="@android:color/holo_blue_dark"
                card_view:layout_constraintBottom_toTopOf="@+id/details_book_name"
                card_view:layout_constraintStart_toEndOf="@+id/details_book_image" />

            <TextView
                android:id="@+id/details_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="[genere]"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/details_book_image"
                card_view:layout_constraintTop_toBottomOf="@+id/details_book_name" />

            <TextView
                android:id="@+id/details_price"
                android:layout_width="61dp"
                android:layout_height="32dp"
                android:layout_marginEnd="36dp"
                android:text="[$X.X]"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintVertical_bias="0.418" />

            <TextView
                android:id="@+id/details_ReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="124dp"
                android:text="[13]"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/ratingstar_iv"
                card_view:layout_constraintTop_toBottomOf="@+id/details_genre"
                card_view:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/ratingstar_iv"
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/raitingstar"
                card_view:layout_constraintStart_toEndOf="@+id/details_ReviewAvg"
                card_view:layout_constraintTop_toBottomOf="@+id/details_genre"
                card_view:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/details_Play"
                android:layout_width="69dp"
                android:layout_height="56dp"
                android:layout_marginStart="304dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="44dp"
                android:text="P"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="@+id/details_book_image"
                card_view:layout_constraintTop_toBottomOf="@+id/details_price"
                card_view:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/details_buy"
                android:layout_width="402dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:text="Buy Audio Book"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/details_playSampleText"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="156dp"
                android:layout_marginEnd="8dp"
                android:text="Play Sample"
                card_view:layout_constraintEnd_toStartOf="@+id/details_Play"
                card_view:layout_constraintHorizontal_bias="0.717"
                card_view:layout_constraintStart_toEndOf="@+id/details_book_image"
                card_view:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/addReviewContainer"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginBottom="8dp"

        android:background="#0f0f0f"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/my_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.v7.widget.CardView
            android:id="@+id/addReviewContainer_bar"
            android:layout_width="376dp"
            android:layout_height="188dp"
            android:layout_marginTop="12dp"
            android:clickable="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="361dp"
                android:layout_height="match_parent"

                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/te_details_ReviewHeader"
                    android:layout_width="270dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Review Header"
                    android:inputType="text|textPersonName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/te_details_ReviewBody"
                    android:layout_width="269dp"
                    android:layout_height="118dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="52dp"
                    android:background="#f8f7e5"
                    android:ems="10"
                    android:hint="Review Body"
                    android:inputType="text|textPersonName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/te_details_ReviewHeader" />

                <Button
                    android:id="@+id/details_btn_addAReview"
                    android:layout_width="76dp"
                    android:layout_height="74dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="#fcad2e"
                    android:onClick="onSearchButtonClick"
                    android:text="Add Review"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    card_view:layout_constraintVertical_bias="0.543" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>


</LinearLayout>